	<servlet>
		<servlet-name>UserNewsServlet</servlet-name>
		<servlet-class>com.usernews.controller.UserNewsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserNewsServlet</servlet-name>
		<url-pattern>/background/pages/usernews.do</url-pattern>
	</servlet-mapping>

		<!-- 平台經營:總數量、總營收 -->
